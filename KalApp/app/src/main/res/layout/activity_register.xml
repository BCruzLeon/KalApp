<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/RegisterBG"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/Logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        />

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="Crear una \ncuenta"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/registerhelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="¿Ya tienes una cuenta? Inicia sesión aquí"
        android:layout_below="@id/register"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:textColor="#994A90E2"
        />

    <TextView
        android:id="@+id/namelabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:layout_below="@id/registerhelp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="38dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_below="@id/namelabel"
        android:hint="Nombre Completo"
        android:textSize="16sp"
        android:textColorHint="#904D4C4C"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="38dp"
        android:padding="20dp"
        android:backgroundcolor="#50E8F5E9"
        android:background="@drawable/rounded_edittext"
        />

    <TextView
        android:id="@+id/emaillabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CORREO"
        android:layout_below="@id/name"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="38dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/emaillabel"
        android:hint="CorreoEjemplo@gmail.com"
        android:textSize="16sp"
        android:textColorHint="#904D4C4C"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="38dp"
        android:padding="20dp"
        android:background="@drawable/rounded_edittext"
        />

    <TextView
        android:id="@+id/passwordlabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTRASEÑA"
        android:layout_below="@id/email"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="38dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@id/passwordlabel"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="38dp"
        android:padding="20dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/doblabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FECHA DE NACIMIENTO"
        android:layout_below="@id/password"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="38dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dob"
        android:layout_below="@id/doblabel"
        android:hint="Seleccionar"
        android:textSize="16sp"
        android:textColorHint="#904D4C4C"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="38dp"
        android:padding="20dp"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/rounded_edittext"
        />

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/dob"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="38dp"
        android:text="Registrarse"
        android:textColor="@color/white"
        />

</RelativeLayout>
